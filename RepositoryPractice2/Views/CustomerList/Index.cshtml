<div class="container">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Car Problem</th>
                <th>Payment Status</th>
                <th>Work Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in ViewBag.CustomerListWithIssue)
            {
                <tr>
                    <td>@obj.CustomerId</td>
                    <td>@obj.CustomerName</td>
                    <td>@obj.Problem</td>
                    <td>@obj.PaymentStatus</td>
                    <td>@obj.WorkStatus</td>
                </tr>
            }
        </tbody>
    </table>
</div>